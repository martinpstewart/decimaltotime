function convertDecimalToHoursMinutes(decimalDuration) {
    const hours = Math.floor(decimalDuration);
    const minutes = Math.round((decimalDuration - hours) * 60);
    return hours + "h " + (minutes > 0 ? minutes + "m" : "");

    const decimalDurationFromGlide = $time$;
    const durationInHoursMinutes = convertDecimalToHoursMinutes(decimalDurationFromGlide);
}
